{
  "name": "reconnection-service",
  "version": "1.0.0",
  "description": "A microservice to reconnect graphs in DSNP/Frequency",
  "main": "dist/main.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/main.js",
    "start:dev": "set -a ; source .env.dev ; ts-node-dev -r tsconfig-paths/register src/main.ts",
    "start:dev:docker": "npm ci && npm run start:dev",
    "docker-build": "docker build -t reconnection-service .",
    "docker-build:dev": "docker-compose -f docker-compose.dev.yaml build",
    "docker-run": "docker build -t reconnection-service-deploy . ; docker run -p 6379:6379 --env-file .env.dev reconnection-service-deploy",
    "docker-run:dev": "docker-compose -f docker-compose.dev.yaml up -d ; docker-compose -f docker-compose.dev.yaml logs -f reconnection-service",
    "docker-stop:dev": "docker-compose -f docker-compose.dev.yaml stop",
    "clean": "rm -Rf dist",
    "lint": "tsc --noEmit --pretty && eslint \"**/*.ts\" --fix",
    "test": "npx jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmplicaLabs/reconnection-service.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AmplicaLabs/reconnection-service/issues"
  },
  "homepage": "https://github.com/AmplicaLabs/reconnection-service#readme",
  "dependencies": {
    "@dsnp/graph-sdk": "^0.0.0-6bbde0",
    "@frequency-chain/api-augment": "^1.6.0",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.4.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.4.0",
    "@nestjs/event-emitter": "^1.4.1",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/testing": "^9.4.0",
    "@nestjs/typeorm": "^9.0.1",
    "@polkadot/api": "^10.4.1",
    "@polkadot/types": "^10.4.1",
    "@polkadot/util": "^10.4.1",
    "axios": "^1.3.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "joi": "^17.9.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@polkadot/typegen": "10.4.1",
    "@typescript-eslint/parser": "^5.59.8",
    "@typescript-eslint/typescript-estree": "5.59.8",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-nestjs": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
